<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">

    <!-- 商品名称 -->
    <EditText
        android:id="@+id/etProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商品名称"
        android:padding="16dp"
        android:background="#FFFFFF"/>

    <!-- 商品描述 -->
    <EditText
        android:id="@+id/etProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商品描述"
        android:padding="16dp"
        android:layout_below="@id/etProductName"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"/>

    <!-- 商品价格 -->
    <EditText
        android:id="@+id/etProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商品价格"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:layout_below="@id/etProductDescription"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"/>

    <!-- 商品位置 -->
    <EditText
        android:id="@+id/etProductLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商品位置"
        android:padding="16dp"
        android:layout_below="@id/etProductPrice"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"/>

    <!-- 商品位置 -->
    <!-- 上传商品图片按钮 -->

    <!-- 展示已上传的图片 -->

    <!-- 显示图片编号 -->

    <EditText
        android:id="@+id/etProductType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etProductPrice"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:hint="类别"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etProductLocation"
        android:layout_marginStart="16dp"
        android:layout_marginTop="83dp"
        android:background="#4CAF50"
        android:text="上传图片"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/btnUploadImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/images" />

    <TextView
        android:id="@+id/tvImageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUploadImage"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="#333333"/>

    <!-- 发布按钮 -->

    <!-- 取消按钮 -->

    <Button
        android:id="@+id/btnPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProductImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:background="#2196F3"
        android:text="发布"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPublish"
        android:layout_marginStart="16dp"
        android:layout_marginTop="39dp"
        android:background="#FF5722"
        android:text="取消"
        android:textColor="#FFFFFF" />
</RelativeLayout>
